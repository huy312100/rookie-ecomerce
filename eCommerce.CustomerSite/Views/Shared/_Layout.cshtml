                                    <p class="cart_buttons">
                                        <a asp-controller="cart" asp-action="detail" class="btn btn-fill-line view-cart">View Cart</a>
                                    </p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @*End middle header*@





