                            <a class="nav-link cart_trigger" href="#" data-bs-toggle="dropdown"><i class="linearicons-bag2"></i></a>
                            <div class="cart_box cart_right dropdown-menu dropdown-menu-right">
                                @*@foreach(var item in Model.Items)
